<div class="container">
  <h1 class="mt-4">Proje Yönetimi</h1>

  <%= link_to "Proje Ekle", new_advisor_project_path, class: "btn btn-success mb-3" %>

  <% if @projects.any? %>
    <% @projects.each do |project| %>
      <div class="card p-4 mb-3">
        <h3><%= project.title %></h3>
        <p><%= project.description %></p>
        <%= link_to "Düzenle", edit_advisor_project_path(project), class: "btn btn-warning" %>
        <%= link_to "Sil", advisor_project_path(project), method: :delete, class: "btn btn-danger", data: { turbo_method: :delete } %>
      </div>
    <% end %>
  <% else %>
    <p>Henüz proje eklenmemiş.</p>
  <% end %>
</div>

